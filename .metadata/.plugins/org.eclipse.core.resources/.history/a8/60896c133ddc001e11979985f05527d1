package eComProject;

import java.util.concurrent.TimeUnit;

import org.openqa.selenium.JavascriptExecutor;
import org.testng.annotations.BeforeMethod;
import org.testng.annotations.DataProvider;
import org.testng.annotations.Test;

import com.google.common.collect.ImmutableMap;

import io.appium.java_client.android.Activity;

public class LoginWithParam extends LoginTest {
	
	@BeforeMethod
	public void homeScreen() {
		login.startActivity();
	}
	
	@DataProvider(name="data")
	public Object[][] getData() {
		return new Object[][] {{"harshal","female","Argentina"},{"harsh","male","Argentina"}};
	}
	
	@Test(dataProvider="data")
	public void fillformWithParam(String name, String gend, String country) throws InterruptedException {

		driver.manage().timeouts().implicitlyWait(2000, TimeUnit.SECONDS);
		login.inputName(name);
		driver.hideKeyboard();
		login.selectGender(gend);
		login.selectCountry(country);
		login.login();
	}

}
