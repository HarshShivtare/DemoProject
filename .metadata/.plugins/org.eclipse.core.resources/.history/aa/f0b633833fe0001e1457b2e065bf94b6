package Mobile;

import org.openqa.selenium.JavascriptExecutor;
import org.testng.annotations.Test;
import com.google.common.collect.ImmutableMap;

import ecom.TestUtils.Base;
import io.appium.java_client.AppiumBy;

public class Scrolling extends Base {

	@Test(enabled = false)
	public void scroll() {
		
		driver.findElement(AppiumBy.accessibilityId("Views")).click();		
		
		boolean canScrollMore;
		do {
		 canScrollMore = (Boolean) ((JavascriptExecutor) driver).executeScript("mobile: scrollGesture", ImmutableMap.of(
		    "left", 200, "top", 200, "width", 400, "height", 400,
		    "direction", "down",
		    "percent", 3.0
		));}
		while(canScrollMore);	
	}
	
	@Test
	public void scrollToElement() {
		driver.findElement(AppiumBy.accessibilityId("Views")).click();
		UiScrollable UiScroll = new UiScrollable(new UiSelector());
		driver.findElement(AppiumBy.androidUIAutomator("new UiScrollable(new UiSelector()).scrollIntoView(text(\"Switches\"));"));
	}
		

	
	
	

}
